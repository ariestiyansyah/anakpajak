<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal form-border" }) do |f| %>
  <div class="panel-heading">
    Basic Information <%= resource_name.to_s.humanize %>
  </div>
  <%= devise_error_messages! %>
  <div class="panel-body">
    <div class="form-group">
      <%= f.label :username, class: "control-label col-md-2" %>
      <div class="col-md-10">
        <%= f.text_field :username, class: "form-control input-sm", placeholder: "Username" %>
      </div><!-- /.col -->
    </div><!-- /form-group -->
    <div class="form-group">
      <label class="control-label col-md-2">Password</label>
      <div class="col-md-10">
        <input type="password" class="form-control input-sm" value="Password">
      </div><!-- /.col -->
    </div><!-- /form-group -->
    <div class="form-group">
      <%= f.label :description, class: "control-label col-md-2" %>
      <div class="col-md-10">
        <%= f.text_area :description, autofocus: true, class: "form-control input-sm" %>
      </div><!-- /.col -->
    </div>
    <div class="form-group">
      <%= f.label :email, class: "control-label col-md-2" %>
      <div class="col-md-10">
        <%= f.email_field :email, autofocus: true, class: "form-control input-sm" %>
      </div><!-- /.col -->
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="form-group">
      <%= f.label :password, class: "control-label col-md-2" %> <i>(leave blank if you don't want to change it)</i>
      <div class="col-md-10">
        <%= f.password_field :password, autocomplete: "off", class: "form-control input-sm" %>
      </div><!-- /.col -->
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: "control-label col-md-2" %>
      <div class="col-md-10">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-sm" %>
      </div><!-- /.col -->
    </div>
    <div class="form-group">
      <%= f.label :current_password, class: "control-label col-md-2" %> <i>(we need your current password to confirm your changes)</i>
      <div class="col-md-10">
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control input-sm" %>
      </div><!-- /.col -->
    </div>
    <!-- /form-group -->
