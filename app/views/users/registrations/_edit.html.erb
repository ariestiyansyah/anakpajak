      </div>
    </div> --><!-- /form-group -->
  </div>
  <div class="panel-footer">
    <div class="text-right">
      <%= f.submit "Update", class: "btn btn-sm btn-success" %>
      <!-- <button class="btn btn-sm btn-success" type="reset">Reset</button> -->
    </div>
