<div class="wrapper row-offcanvas row-offcanvas-left">
    <!-- Left side column. contains the logo and sidebar -->
    <%= render "form/sidebar"%>
    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Form Peraturan
            </h1>
        </section>
        <!-- Main content -->
        <!-- Main content -->
        <section class="content">
            <div class='row'>
                <div class='col-md-12'>
                    <div class="box box-info">
                        <div class="box-header">
                            <i class="glyphicon glyphicon-send"> </i>
                            <h3 class="box-title"> Pertanyaan</h3>
                            <!-- tools box -->
                            <div class="pull-right box-tools">
                                <button class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                            </div><!-- /. tools -->
                        </div>
                        <%= form_for @rule do |f| %>
                            <div class="box-body">
                                    <div class="form-group">
                                        <%= f.text_field :title, class: "form-control", placeholder:"Subject" %>
                                    </div>
                                    <div>
                                        <%= f.text_area :content, class: "textarea", placeholder: "Message", style:"width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" %>
                                    </div>
                                    <div class="form-group">
                                        <select class="form-control">
                                            <option value="">PPN</option>
                                            <option value="">PBB</option>
                                        </select>
                                    </div>
                            </div>
                            <div class="box-footer clearfix">
                                <button class="pull-right btn btn-default" id="sendEmail">Send <i class="fa fa-arrow-circle-right"></i></button>
                            </div>
                        <% end %>
                        
                    </div>
                </div><!-- /.col-->
            </div><!-- ./row -->
</aside><!-- /.right-side -->
</div>